{
  "name": "aporia-vault",
  "version": "0.0.0",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "serve": "ng serve",
    "start": "electron .",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "devserver": "nodemon ./api/server.js",
    "test": "node ./api/teste.js",
    "build-angular": "ng build",
    "electron-pack": "electron-packager . aporia --platform=win32 --arch=x64 --out=dist --overwrite --asar",
    "build-installer": "electron-builder",
    "aporia": "npm run build-angular && npm run build-installer"
  },
  "build": {
    "appId": "com.aporiavault.app",
    "productName": "Aporia Vault",
    "directories": {
      "output": "dist/installer"
    },
    "files": [
      "main.js",
      "dist/**/*",
      "api/**/*",
      "node_modules/**/*",
      "public/**/*",
      "vaults/**/*"
    ],
    "asarUnpack": [
      "vaults"
    ],
    "win": {
      "target": "nsis",
      "icon": "./public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "type": "module",
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/router": "^18.2.0",
    "@scure/bip32": "^1.6.2",
    "bip32": "^5.0.0-rc.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.7",
    "bootstrap": "^5.3.3",
    "bs58check": "^4.0.0",
    "buffer": "^6.0.3",
    "cors": "^2.8.5",
    "ecpair": "^3.0.0",
    "express": "^4.21.2",
    "fs": "^0.0.1-security",
    "noble-secp256k1": "^1.2.14",
    "path": "^0.12.7",
    "random-words": "^2.0.1",
    "rxjs": "~7.8.0",
    "tiny-secp256k1": "^2.2.3",
    "tslib": "^2.3.0",
    "url": "^0.11.4",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.11",
    "@angular/cli": "^18.2.16",
    "@angular/compiler-cli": "^18.2.0",
    "@types/jasmine": "~5.1.0",
    "electron": "^35.0.3",
    "electron-builder": "^25.1.8",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.5.2"
  }
}
